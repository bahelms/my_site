<%= provide(:title, "Blog Archives") %>
<section id="archives">
  <div class="row-fluid">
    <div class="span8 offset2"><h3>Blog Archives</h3></div>
    <div class="row-fluid">
      <div class="span8 offset2">
        <ul>
          <% if @articles.any? %>
            <%= render @articles %>
          <% end %>
        </ul>
      </div>
      <div class="pagination pagination-centered">
        <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</section>
